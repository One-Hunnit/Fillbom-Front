{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    /* Path */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "metro.config.js", "src"]
}
